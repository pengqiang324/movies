/* pages/index/index.wxss */
page {
  height: 100%;
}

.list-item {
  width: 100%;
  overflow: hidde;
  box-sizing: border-box;
  padding:0 20px;
}

.list-item:after {
  content: '';
  display: table;
  clear: both;
}

.movie-item {
  width: 48%;
  margin: 1%;
  float: left;
}

.movie-item .poster {
  width: 100%;
}

.movie-item .title {
  font-size: 28rpx;
  text-align: center;
  color: #333;
  margin: 5rpx 0;
}

.movie-item .info {
  text-align: center;
  font-size: 20rpx;
  color: #888;
}

.movie-item .title .rate {
  color: #f00;
}

.loading {
  text-align: center;
  height: 80rpx;
  padding: 20rpx;
}

.loading image {
  height: 100%;
}